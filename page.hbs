{{!< default}}

<div class="container section">
    {{! 公告提示 }}
    {{> notice}}

    <div class="row">
        <div class="main-side col s12 m12 l8">
            {{! 文章内容 }}
            {{#post}}
            <div id="article-detail" class="article">
                <div class="detail-card card">
                    <div class="card-content">
                        <div class="article-title card-title b-title b-text-green">{{{title}}}</div>
                        <ul class="list-inline">
                            <li>
                                {{#author}}
                                <a href="#" target="_blank" class="b-text-gray">
                                    <i class="fa fa-user"></i> {{name}}
                                </a>
                                {{/author}}
                            </li>
                            <li>
                                <a class="b-text-gray">
                                    <i class="fa fa-calendar"></i> {{date published_at format="MMMM DD YYYY"}}
                                </a>
                            </li>
                            <li class="detail-card-tag hide-on-small-only">
                            {{#if tags}}
                                <a><i class="fa fa-tag b-text-gray"></i></a>
                                {{#foreach tags}}
                                <span class="chip">{{name}}</span>
                                {{/foreach}}
                            {{/if}}
                            </li>
                        </ul>
                    </div>
                    <div class="article-action card-action"></div>
                    <div id="article-content" class="card-content">
                        {{content}}
                    </div>
                    <div class="article-action card-action"></div>
                    <div class="card-content">
                        <p>转载请注明：<a href="http://blinkfox.com" class="b-text-green" target="_blank">{{@blog.title}}</a>
                             &raquo; <a href="{{url}}" class="b-text-green" target="_blank">{{{title}}}</a>
                        </p>
                        {{! 社交分享 }}
                        {{> social_share}}
                    </div>
                </div>

                {{! 上一篇和下一篇的功能 }}
                <div class="prenext-card card">
                    <div class="prenext-row row">
                        <div class="prenext col s12 m6 l6">
                            {{#if previous}}
                            <p class="pn-title">上一篇</p>
                            <div>
                                <a href="{{previous.url}}" class="b-link">{{{previous.title}}}</a>
                            </div>
                            {{/if}}
                        </div>
                        <div class="prenext col s12 m6 l6">
                            {{#if next}}
                            <p class="pn-title">下一篇</p>
                            <div>
                                <a href="{{next.url}}" class="b-link">{{{next.title}}}</a>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{/post}}
        </div>
        <div class="col s12 m12 l4 hide-on-med-and-down">
            <div class="sidebar">
                {{! 博主基本信息 }}
                {{> user_info}}

                {{! 标签云 }}
                {{tag_cloud}}

                {{! 友情链接 }}
                {{> friend_url}}
            </div>
        </div>
    </div>
</div>
